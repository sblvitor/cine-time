<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/half_margin_default"
    app:cardElevation="@dimen/half_margin_default"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_top_rated_tv_poster"
            android:layout_width="125dp"
            android:layout_height="190dp"
            android:contentDescription="@string/movie_poster_cd"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tv_top_rated_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/half_margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginEnd="@dimen/half_margin_default"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="3"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_top_rated_tv_poster"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Deadpool" />

        <TextView
            android:id="@+id/tv_top_rated_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_margin_default"
            android:layout_marginEnd="@dimen/half_margin_default"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/yellow_rating"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_top_rated_tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_top_rated_tv_title"
            tools:text="Rating: 8.6" />


        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_top_rated_tv_title"
            android:layout_marginBottom="@dimen/half_margin_default">

            <com.google.android.material.chip.Chip
                android:id="@+id/top_rated_tv_chip_one"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                tools:text="Ação" />

            <com.google.android.material.chip.Chip
                android:id="@+id/top_rated_tv_chip_two"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                tools:text="Romance" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>