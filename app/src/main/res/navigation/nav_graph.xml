<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_popular_movies">

    <fragment
        android:id="@+id/nav_popular_movies"
        android:name="com.lira.cinetime.ui.popularMovies.PopularMoviesFragment"
        android:label="@string/popular_movies_label"
        tools:layout="@layout/fragment_popular_movies">
        <action
            android:id="@+id/action_nav_popular_movies_to_navigation_login_flow"
            app:destination="@id/navigation_login_flow"
            app:popUpTo="@id/nav_popular_movies"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_now_playing"
        android:name="com.lira.cinetime.ui.nowPlaying.NowPlayingFragment"
        android:label="@string/now_playing_label"
        tools:layout="@layout/fragment_now_playing" />

    <navigation
        android:id="@+id/navigation_login_flow"
        app:startDestination="@id/nav_login">

        <fragment
            android:id="@+id/nav_login"
            android:name="com.lira.cinetime.ui.login.LoginFragment"
            android:label="@string/txt_log_in"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_nav_login_to_nav_register"
                app:destination="@id/nav_register" />
            <action
                android:id="@+id/action_nav_login_to_nav_popular_movies"
                app:destination="@id/nav_popular_movies"
                app:popUpTo="@id/nav_login"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/nav_register"
            android:name="com.lira.cinetime.ui.register.RegisterFragment"
            android:label="@string/txt_register"
            tools:layout="@layout/fragment_register">
            <action
                android:id="@+id/action_nav_register_to_nav_login"
                app:destination="@id/nav_login"
                app:popUpTo="@id/nav_login"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_nav_register_to_nav_popular_movies"
                app:destination="@id/nav_popular_movies"
                app:popUpTo="@id/nav_login"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>
    <action
        android:id="@+id/action_global_navigation_login_flow"
        app:destination="@id/navigation_login_flow"
        app:popUpTo="@id/nav_popular_movies"
        app:popUpToInclusive="true"/>
</navigation>