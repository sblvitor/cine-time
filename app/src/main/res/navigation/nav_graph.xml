<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_popular_movies">

    <fragment
        android:id="@+id/nav_popular_movies"
        android:name="com.example.cinetime.ui.popularMovies.PopularMoviesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_popular_movies">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/nav_now_playing" />
    </fragment>
    <fragment
        android:id="@+id/nav_now_playing"
        android:name="com.example.cinetime.ui.nowPlaying.NowPlayingFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_now_playing">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/nav_popular_movies" />
    </fragment>
</navigation>